{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"paths": {
			"@app/*": ["app/*"],
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"]
		},
		"skipLibCheck": true,
		"types": ["@types/node", "@types/react", "@types/react-dom"]
	}
}
